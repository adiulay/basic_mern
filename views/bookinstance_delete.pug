extends layout

block content
  h1 #{title}: #{book_instance._id}

  p #[strong Imprint:] #{book_instance.imprint}
  p #[strong Status:] #{book_instance.status}
  p #[strong Due:] #{book_instance.due_back_formatted}
  
  p Do you really want to delete this book instance?

  form(method='POST' action='')
      div.form-group
      input#bookinstance.form-control(type='hidden',name='bookinstance', required='true', value=book_instance._id )

      button.btn.btn-primary(type='submit') Delete